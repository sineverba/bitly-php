{
    "name": "sineverba/bitly",
    "description": "PHP Wrapper for APIv4 Bit.ly",
    "keywords": ["php","wrapper","bit.ly","bitly"],
    "license": "MIT",
    "authors": [
        {
            "name": "sineverba"
        }
    ],
    "require": {
		"php": ">=7.1",
        "guzzlehttp/guzzle": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "sineverba\\Bitly\\": "src/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14",
        "phpunit/phpunit": "^7.0"
    },
    "scripts": {
        "test": "phpunit --testdox",
        "check-style": "php-cs-fixer fix src --dry-run --rules=@PSR2",
        "fix-style": "php-cs-fixer fix src --rules=@PSR2"
    }
}
